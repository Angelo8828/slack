{
    "name": "angelo8828/slack",
    "description": "A simple PHP package for sending messages to Slack, with a focus on ease of use and elegant syntax. Future-proofed version of https://github.com/maknz/slack",
    "keywords": ["laravel", "slack"],
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "Regan McEntyre",
            "email": "github@mak.geek.nz",
            "homepage": "https://github.com/maknz"
        },
        {
            "name": "Angelo Joseph Salvador",
            "email": "angelo8828@gmail.com",
            "homepage": "https://github.com/Angelo8828"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "guzzlehttp/guzzle": ">=4.0",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "4.2.*",
        "mockery/mockery": "0.9.*"
    },
    "suggest": {
        "maknz/slack-laravel": "Required for Laravel support",
        "nexylan/slack-bundle": "Required for Symfony bundle support"
    },
    "autoload": {
        "psr-4": {
            "Angelo8828\\Slack\\": "src/"
        }
    },
    "minimum-stability": "stable"
}
